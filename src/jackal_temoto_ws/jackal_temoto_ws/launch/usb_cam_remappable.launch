<launch>
  <arg name="camera_data" default="usb_cam/image_raw" />
  <arg name="camera_info" default="usb_cam/camera_info" /> 
  <arg name="video_device" default="/dev/video3" />   

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" args="usb_cam/image_raw:=$(arg camera_data) camera_info:=$(arg camera_info)" >
    <param name="video_device" value="$(arg video_device)" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
  </node>
</launch>
